{
  "name": "baseline-feature-advisor",
  "displayName": "AI-Powered Baseline Feature Advisor",
  "description": "Detect unsafe web APIs and get AI-powered suggestions for Baseline-supported alternatives.",
  "version": "1.0.1",
  "publisher": "Algma-Tech", 
  "author": {
    "name": "Adam Adekanye Adewale (Algma Tech)",
    "email": "adamadekanye941@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mechwane/baseline-feature-advisor"
  },
  "icon": "adam.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "web",
    "baseline",
    "compatibility",
    "api",
    "scanner",
    "ai",
    "security"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baselineAdvisor.scanFile",
        "title": "Scan for Non-Baseline APIs",
        "category": "Baseline Advisor"
      },
      {
        "command": "baselineAdvisor.scanWorkspace",
        "title": "Scan Workspace for Non-Baseline APIs",
        "category": "Baseline Advisor"
      }
    ],
    "configuration": {
      "title": "Baseline Feature Advisor",
      "properties": {
        "baselineAdvisor.enableRealTimeScanning": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time scanning while typing"
        },
        "baselineAdvisor.aiSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered suggestions"
        },
        "baselineAdvisor.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for AI suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "web-features": "^0.8.6",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.2",
    "node-fetch": "^2.6.7"
  }
}
